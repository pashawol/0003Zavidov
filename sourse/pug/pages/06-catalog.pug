include ../blocks/sFilter/_sFilter.pug 

block variables
	- let  mainPage= null
block title
	- let  title= 'Каталог объектов'
	title= title
block pagecontent 
	+mob-mnu()
	+header()
		.fixed-line
			.container
				+topLine()
				+top-nav()
	+breadcrumb("Главная",title)
	+page-title(title)
	+sCategories-sm()
	.container.mb-30
		.row
			.col-lg-3
				+sFilter()
					+e.block
						.strong.mb-2 Тип недвижимости
						+input('Выбрать','select')(class="form-control-sm ")
					+e.block
						.strong.mb-2 Цена (руб.):
						+range("1000000", "30000000")
					+e.block
						.strong.mb-2 Населённый пункт
						+input('Выбрать','select')(class="form-control-sm ")
					+e.block
						.strong.mb-2 Метро
						+input('Выбрать','select')(class="form-control-sm ")
					+e.block
						.strong.mb-2 Общая прощадь (м2):
						+range("20", "44000")
			.col-lg-9
				.row
					mixin row()
						.col-sm-6.col-lg-4.mb-30
							+itemProd('2')
						.col-sm-6.col-lg-4.mb-30
							+itemProd('3')
						.col-sm-6.col-lg-4.mb-30
							+itemProd('4')
					+row
					+row
					+row
				+pugin()


	//- +sForm-sm()
