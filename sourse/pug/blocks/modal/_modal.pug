		div(id="modal-call" class=" modal-win modal-win--lg modal-form" )
			+form-wrap()
				.row
				
					.col-md-6
						+pic("girl",'','')
					.col-md-6
						+e.title.h5.text-center Оставьте заявку и&nbsp;наш специалист с&nbsp;Вами свяжется
						+input("Ваше Имя")(required) 
						+input('Ваш номер телефона','tel')(required)
